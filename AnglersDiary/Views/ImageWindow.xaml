<Mahapps:MetroWindow x:Class="AnglersDiary.Views.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:AnglersDiary"
        mc:Ignorable="d"
         Height="600" Width="600" Loaded="ImageWindow_Loaded">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Name="Img" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform" />
    </StackPanel>
</Mahapps:MetroWindow>
